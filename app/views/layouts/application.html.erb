<!DOCTYPE html>
<html>
<head>
  <title>Prophets</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <%=link_to "Log Out", destroy_user_session_url, :method => :delete %>
<% else %>
  <%= link_to "Sign Up", new_user_registration_url, :class => "anchorbutton button_green" %>
  &nbsp;&nbsp;
  <%=link_to "Sign In", new_user_session_url, :class => "anchorbutton button_white" %>
<% end %>

<%= yield %>

</body>
</html>
